<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" prefHeight="450.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment11.HistoryController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    
    <ListView fx:id="historyListView" VBox.vgrow="ALWAYS" />
    
    <HBox spacing="10.0" alignment="CENTER">
        <Button text="Go to Selected State" onAction="#goToSelectedState" prefWidth="150.0" />
        <Button text="Close" onAction="#closeWindow" prefWidth="100.0" />
    </HBox>
</VBox>
