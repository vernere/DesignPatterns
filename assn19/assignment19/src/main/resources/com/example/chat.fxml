<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ChatWindowController">
   <children>
      <Label fx:id="usernameLabel" alignment="CENTER" prefHeight="25.0" prefWidth="400.0" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Chat - Username" />
      
      <TextArea fx:id="messageDisplayArea" editable="false" prefHeight="300.0" prefWidth="400.0" wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="To:" />
            <ChoiceBox fx:id="recipientChoiceBox" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <TextField fx:id="messageInputField" onAction="#sendMessage" prefWidth="300.0" promptText="Type your message here..." />
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: green;" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>